<h2 class="page-header">Edit Book</h2>
<!-- route to create a new book -->
<form action="/books/<%= book.id %>?_method=PUT" method="POST">
    <div class="form-row">
        <div class="form-item">
            <label for="">Title</label>
            <input type="text" name="title" value="<%= book.title %>">
        </div>
        <div class="form-item">
            <label for="">Author</label>
            <select name="author">
                <% authors.forEach(author => { %>
                    <% if (author.id === book.author) { %>
                    <option selected value="<%= author.id %>"><%= author.name %></option>
                    <% } else { %>
                    <option value="<%= author.id %>"><%= author.name %></option>
                    <% } %>
                <% }); %>
            </select>
        </div>
    </div>
    <div class="form-row">
        <div class="form-item">
            <label for="">Publish Date</label>
            <input type="date" name="publishDate" 
            value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0] %>">
        </div>
        <div class="form-item">
            <label for="">Page Count</label>
            <input type="number" name="pageCount" min="1" value="<%= book.pageCount %>">
        </div>
    </div>
    <div class="form-row">
        <div class="form-item form-item-no-grow">
            <label for="">Cover</label>
            <input type="file" name="cover" class="book-cover filepond">
        </div>
        <div class="form-item">
            <label for="">Description</label>
            <textarea name="description"><%= book.description %></textarea>
        </div>
    </div>
    <div class="form-row form-row-end btn-row">
        <a class="btn btn-delete" href="/books">Cancel</a>
        <button class="btn btn-primary" type="submit">Update</button>
    </div>
</form>
